import java.util.Scanner;

public class Programm {
	public static void main (String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.print("Введите день недели: ");
		String day = scanner.nextLine();
		switch (day){
		case "понедельник" : 
				System.out.print("понедельник\n Преимущ. солнечно\n 22°C");
		break;
		case "вторник" : 
				System.out.print("вторник\n Преимущ. солнечно\n 23°C");
		break;
		case "среда" :
				System.out.print("среда\n Переменная облачность\n 24°C");
		break;
		case "четверг" : 
				System.out.print("четверг\n Переменная облачность\n 22°C");
		break;
		case "пятница" : 
				System.out.print("пятница\n Переменная облачность\n 24°C");
		break;
		case "суббота" : 
				System.out.print("суббота\n Дождь\n 13°C");
		break;
		case "воскресенье" :
				System.out.print("воскресенье\n Ясно\n 19°C");
		break;
		default : 
				System.out.print("НЕТ");
		
		}
		
		}
	}
